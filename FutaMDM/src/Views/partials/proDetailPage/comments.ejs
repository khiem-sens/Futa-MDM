<div class="row">
    <h4 style="font-size: 24px;margin-top: 30px;margin-bottom: 18px;">COMMENTS</h4>

    <% comments.forEach((comment)=>{ %>
        <div class="row" style="border-bottom-style: inset;border-width: 2px;padding-top: 8px;">
            <div class="span3">
                <% cmtCustomers.forEach((customer)=>{ %>
                    <% if(customer[0].id === comment.createby){ %>
                        <div class="row" style="display: inline-flex">
                            <div class="col-md-auto">
                                <img src="<%= customer[0].avatar %>" alt="" style="border-radius: 40px;">
                            </div>
                            <div class="col-md-auto"
                                style="padding-top: 25px;padding-left: 14px;font-size: 20px;font-weight: 600;">
                                <%= customer[0].name %>
                            </div>
                        </div>
                        <div class="row" style="font-size: 12px;color: gray;">
                            Join in <%= customer[0].created_time %>
                        </div>

                        <% } %>
                            <% }) %>
            </div>
            <div class="span9">
                <div class="row" style="display: inline-flex;">
                    <% for(let i=0; i< comment.rating; i++) { %>
                        <span class="material-icons" style="color: #FDD835;margin-left: -7px;">
                            star_rate
                        </span>
                        <% } %>
                            <% for(let i=0; i< 5-comment.rating; i++) { %>
                                <span class="material-icons" style="color:whitesmoke;margin-left: -7px;">
                                    star_rate
                                </span>
                                <% } %>
                                    <div style="font-weight: 600;padding-left: 8px;padding-top: 4px;font-size: 16px;">
                                        <%= comment.title %>
                                    </div>
                </div>
                <div class="row" style="color: green;font-weight: 700;padding-top: 6px;padding-bottom: 19px;">
                    Bought from
                    <span class="material-icons" style="font-size: 15px;">
                        check_circle
                    </span>
                    <%= sellers[0][0].name %>
                </div>
                <div class="row">
                    <%= comment.content %>
                </div>
                <div class="row" style="display: inline-flex;">
                    <div id="gallery">
                        <% cmtImages.forEach((image)=>{ %>
                            <% if(String(image.comID)==String(comment.id)){ %>
                                <a href="<%= image.full_path %>">
                                    <img src="<%= image.full_path %>" alt=""
                                        style="width: 152px;height: 152px;border-radius: 12px; padding-bottom: 9px;">
                                </a>
                                <% } %>
                                    <% }) %>
                    </div>
                </div>
                <div class="row" style="font-size: 12px;color: gray;padding-bottom: 25px;">
                    Comment on <%= new Date(comment.create_at*1000).toLocaleString() %>
                </div>

            </div>
        </div>
        <% }) %>
</div>