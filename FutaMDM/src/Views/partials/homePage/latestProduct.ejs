    .popular-info-arr {
      font-size: 1.4rem;
    }

    .popular-info-detail {
      justify-content: space-between;
      column-gap: 2rem;
    }

    .popular-info-distance {
      order: 3;
    }

    .popular-info-cost {
      order: 1;
    }

    .popular-info-icon,
    .popular-info-text {
      font-size: 1.2rem;
    }
  }

  @media screen and (max-width: 377.8px) {
    .popular-item-link {
      height: 100%;
    }

    .popular-item-image {
      width: 12rem;
      height: 100%;
    }
  }
</style>

