    .popular-item:nth-child(2) .popular-info-arr,
    .popular-item:nth-child(2) .popular-info-cost span,
    .popular-item:nth-child(3) .popular-info-title,
    .popular-item:nth-child(3) .popular-info-arr,
    .popular-item:nth-child(3) .popular-info-cost span,
    .popular-item:nth-child(6) .popular-info-title,
    .popular-item:nth-child(6) .popular-info-arr,
    .popular-item:nth-child(6) .popular-info-cost span,
    .popular-item:nth-child(7) .popular-info-title,
    .popular-item:nth-child(7) .popular-info-arr,
    .popular-item:nth-child(7) .popular-info-cost span {
      color: #ef5222;
    }

    .popular-item:nth-of-type(2n) .popular-info-title,
    .popular-item:nth-of-type(2n) .popular-info-arr,
    .popular-item:nth-of-type(2n) .popular-info-cost span {
      color: #00613d;
    }

    .popular-info-title {
      gap: 1rem;
    }

    .popular-info-detail {
      justify-content: flex-end;
      column-gap: 2rem;
    }

    .popular-info-distance {
      order: 0;
    }

    .popular-info-cost {
      order: 0;
    }
  }

  @media screen and (max-width: 479.8px) {
    .popular-info-title {
      margin-bottom: 1rem;
      gap: 1rem;
    }

    .popular-info-to-go,
    .popular-info-arr {
      font-size: 1.6rem;
    }

    .popular-info-detail {
      justify-content: flex-end;
      column-gap: 1rem;
    }
  }

