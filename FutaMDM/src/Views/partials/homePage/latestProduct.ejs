    src: url(./../fonts/SF-Pro-Display-Regular.otf);
  }

  @font-face {
    font-family: "SFProVietsub";
    font-weight: 500;
    src: url(./../fonts/SF-Pro-Display-Medium.otf);
  }

  @font-face {
    font-family: "SFProVietsub";
