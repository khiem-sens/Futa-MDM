

<table class="table table-bordered">
  <thead>
      <tr>
        <th>Thời Gian Đặt</th>
        <th>Lộ Trình</th>
        <th>Khởi Hành</th>
        <th>Trạng Thái</th>
        <th>Tổng(VND)</th>
        <th>Tổng(USD)</th>  
        <th></th>
      </tr>
  </thead>
  <tbody>
      <% invoiceList.forEach((invoice)=>{ %>
        <%  if(invoice.IS_ACTIVE == 0){ %>
          <tr>
              <td>
                  <span class="label label-info"> <%= String(invoice.ORDER_DATE).replace('GMT+0700','')%></span>
              </td>
              <td>
                  <div>
                      <% invoice.LISTPRODUCTID.split(',').forEach((_id)=>{ %>
                          <script src="javascript/handleOnloadPro.ivmanage.js" _id="<%= _id %>"></script>
                          <div id="div_<%=_id %>" style="padding-bottom: 4px;">
                          </div>
                          <% }) %>
                  </div>
              </td>
              <td><%=invoice.TIME_DEPART%></td>
              <td><span class="label label-warning"><%= invoice.STATUS %></span></td>
              <td style="font-weight: 600;
              color: orangered;
              font-size: 14px;"><%= moneyConvert(invoice.TOTAL_VND) %></td>
              <td><%= invoice.TOTAL_USD %></td>
              <td><button onClick="handleOrderAgain(`<%= invoice.ID %>`)" class="btn btn-info">Đặt lại vé</button></td>
          </tr>
         
          <% }})%>
  </tbody>
</table>
<script src="javascript/handleOrderAgain.js"></script>