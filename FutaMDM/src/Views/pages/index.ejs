	.booking-submit-icon {
		font-size: 1.6rem;
		margin-right: 0.2rem;
		transform: translateY(-0.1rem);
	}

	.booking-submit-text {
		text-transform: uppercase;
		font-size: 1.6rem;
		font-weight: 300;
		letter-spacing: 0.05rem;
		text-indent: -0.05rem;
